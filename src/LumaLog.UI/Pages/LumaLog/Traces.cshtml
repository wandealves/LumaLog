@page "/lumalog/traces"
@using global::LumaLog.Abstractions
@using global::LumaLog.Configuration
@using Microsoft.Extensions.Options
@inject ILumaLogService LumaLogService
@inject IOptions<LumaLogOptions> Options
@{
    ViewData["Title"] = "Traces";
    var basePath = Options.Value.DashboardPath.TrimEnd('/');

    var filter = new TraceFilter
    {
        Page = int.TryParse(Request.Query["page"], out var p) ? p : 1,
        PageSize = int.TryParse(Request.Query["pageSize"], out var ps) ? ps : 50,
        SearchTerm = Request.Query["search"],
        ServiceName = Request.Query["service"],
        SortDescending = true
    };

    if (bool.TryParse(Request.Query["hasErrors"], out var hasErrors))
        filter.HasErrors = hasErrors;

    var traces = await LumaLogService.QueryTracesAsync(filter);
}

<div class="space-y-4 sm:space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <h1 class="text-xl sm:text-2xl font-bold tracking-tight">Traces</h1>
        <div class="flex items-center gap-2 sm:gap-3">
            <a href="@basePath/api/export/traces?format=csv" class="btn btn-secondary btn-sm">Export CSV</a>
            <a href="@basePath/api/export/traces?format=json" class="btn btn-secondary btn-sm">Export JSON</a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card rounded-xl p-3 sm:p-4 border">
        <form method="get" class="space-y-3 sm:space-y-0 sm:flex sm:flex-wrap sm:gap-3 sm:items-end">
            <div class="flex-1 min-w-0 sm:min-w-[200px]">
                <label class="block text-xs sm:text-sm text-secondary mb-1">Search</label>
                <input type="text" name="search" value="@filter.SearchTerm" placeholder="Search traces..."
                       class="w-full px-3 py-2 text-sm border rounded-lg">
            </div>
            <div class="flex gap-2 sm:gap-3">
                <div class="w-1/2 sm:w-32">
                    <label class="block text-xs sm:text-sm text-secondary mb-1">Service</label>
                    <input type="text" name="service" value="@filter.ServiceName" placeholder="Service name"
                           class="w-full px-3 py-2 text-sm border rounded-lg">
                </div>
                <div class="w-1/2 sm:w-32">
                    <label class="block text-xs sm:text-sm text-secondary mb-1">Status</label>
                    <select name="hasErrors" class="w-full px-3 py-2 text-sm border rounded-lg">
                        <option value="">All</option>
                        <option value="true" selected="@(filter.HasErrors == true)">With Errors</option>
                        <option value="false" selected="@(filter.HasErrors == false)">Without Errors</option>
                    </select>
                </div>
            </div>
            <div class="flex gap-2 pt-1 sm:pt-0">
                <button type="submit" class="btn btn-primary btn-sm flex-1 sm:flex-none">
                    Filter
                </button>
                <a href="@basePath/traces" class="btn btn-secondary btn-sm flex-1 sm:flex-none">Clear</a>
            </div>
        </form>
    </div>

    <!-- Results -->
    <div class="card rounded-xl border overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="table-header">
                    <tr>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left">Trace ID</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left">Name</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left hidden md:table-cell">Service</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left hidden sm:table-cell">Duration</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left hidden lg:table-cell">Spans</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left">Status</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left hidden sm:table-cell">Time</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
                    @if (traces.Items.Count == 0)
                    {
                        <tr>
                            <td colspan="7" class="px-4 py-8 text-center text-secondary">No traces found</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var trace in traces.Items)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 cursor-pointer transition-colors" onclick="window.location='@basePath/traces/@trace.TraceId'">
                                <td class="px-3 sm:px-4 py-2 sm:py-3 font-mono text-xs">@trace.TraceId[..Math.Min(12, trace.TraceId.Length)]...</td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 max-w-[120px] sm:max-w-xs truncate">@trace.RootSpanName</td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 text-secondary hidden md:table-cell">@(trace.ServiceName ?? "-")</td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 hidden sm:table-cell tabular-nums">
                                    @if (trace.TotalDurationMs.HasValue)
                                    {
                                        <span class="@(trace.TotalDurationMs > 1000 ? "text-yellow-600" : "")">
                                            @(trace.TotalDurationMs >= 1000 ? $"{trace.TotalDurationMs / 1000.0:F2}s" : $"{trace.TotalDurationMs}ms")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-secondary">-</span>
                                    }
                                </td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 tabular-nums hidden lg:table-cell">@trace.SpanCount</td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3">
                                    @if (trace.ErrorCount > 0)
                                    {
                                        <span class="badge badge-error">
                                            @trace.ErrorCount error@(trace.ErrorCount > 1 ? "s" : "")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">OK</span>
                                    }
                                </td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 text-secondary whitespace-nowrap text-xs sm:text-sm hidden sm:table-cell">@trace.StartTime.ToString("MMM dd HH:mm")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (traces.TotalPages > 1)
        {
            <div class="px-3 sm:px-4 py-3 border-t flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                <div class="text-xs sm:text-sm text-secondary">
                    Showing @((traces.Page - 1) * traces.PageSize + 1) to @Math.Min(traces.Page * traces.PageSize, traces.TotalItems) of @traces.TotalItems
                </div>
                <div class="flex gap-2">
                    @if (traces.HasPreviousPage)
                    {
                        <a href="?page=@(traces.Page - 1)&search=@filter.SearchTerm&service=@filter.ServiceName&hasErrors=@filter.HasErrors" class="btn btn-secondary btn-sm">Previous</a>
                    }
                    @if (traces.HasNextPage)
                    {
                        <a href="?page=@(traces.Page + 1)&search=@filter.SearchTerm&service=@filter.ServiceName&hasErrors=@filter.HasErrors" class="btn btn-secondary btn-sm">Next</a>
                    }
                </div>
            </div>
        }
    </div>
</div>
