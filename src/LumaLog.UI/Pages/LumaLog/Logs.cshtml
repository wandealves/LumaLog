@page "/lumalog/logs"
@using global::LumaLog.Abstractions
@using global::LumaLog.Configuration
@using Microsoft.Extensions.Options
@inject ILumaLogService LumaLogService
@inject IOptions<LumaLogOptions> Options
@{
    ViewData["Title"] = "Logs";
    var basePath = Options.Value.DashboardPath.TrimEnd('/');

    var filter = new LogFilter
    {
        Page = int.TryParse(Request.Query["page"], out var p) ? p : 1,
        PageSize = int.TryParse(Request.Query["pageSize"], out var ps) ? ps : 50,
        SearchTerm = Request.Query["search"],
        TraceId = Request.Query["traceId"],
        SortDescending = true
    };

    if (Enum.TryParse<LogLevel>(Request.Query["minLevel"], out var minLevel))
        filter.MinLevel = minLevel;

    var logs = await LumaLogService.QueryLogsAsync(filter);
}

<div class="space-y-4 sm:space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
        <h1 class="text-xl sm:text-2xl font-bold tracking-tight">Logs</h1>
        <div class="flex items-center gap-2 sm:gap-3">
            <a href="@basePath/api/export/logs?format=csv" class="btn btn-secondary btn-sm">Export CSV</a>
            <a href="@basePath/api/export/logs?format=json" class="btn btn-secondary btn-sm">Export JSON</a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card rounded-xl p-3 sm:p-4 border">
        <form method="get" class="space-y-3 sm:space-y-0 sm:flex sm:flex-wrap sm:gap-3 sm:items-end">
            <div class="flex-1 min-w-0 sm:min-w-[200px]">
                <label class="block text-xs sm:text-sm text-secondary mb-1">Search</label>
                <input type="text" name="search" value="@filter.SearchTerm" placeholder="Search messages..."
                       class="w-full px-3 py-2 text-sm border rounded-lg">
            </div>
            <div class="flex gap-2 sm:gap-3">
                <div class="w-1/2 sm:w-32">
                    <label class="block text-xs sm:text-sm text-secondary mb-1">Min Level</label>
                    <select name="minLevel" class="w-full px-3 py-2 text-sm border rounded-lg">
                        <option value="">All</option>
                        @foreach (LogLevel level in Enum.GetValues<LogLevel>())
                        {
                            <option value="@level" selected="@(filter.MinLevel == level)">@level</option>
                        }
                    </select>
                </div>
                <div class="w-1/2 sm:w-40 sm:flex-1 sm:min-w-[150px]">
                    <label class="block text-xs sm:text-sm text-secondary mb-1">Trace ID</label>
                    <input type="text" name="traceId" value="@filter.TraceId" placeholder="Filter by trace..."
                           class="w-full px-3 py-2 text-sm border rounded-lg">
                </div>
            </div>
            <div class="flex gap-2 pt-1 sm:pt-0">
                <button type="submit" class="btn btn-primary btn-sm flex-1 sm:flex-none">
                    Filter
                </button>
                <a href="@basePath/logs" class="btn btn-secondary btn-sm flex-1 sm:flex-none">Clear</a>
            </div>
        </form>
    </div>

    <!-- Results -->
    <div class="card rounded-xl border overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="table-header">
                    <tr>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left">Level</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left">Message</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left hidden md:table-cell">Source</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left">Time</th>
                        <th class="px-3 sm:px-4 py-2 sm:py-3 text-left hidden sm:table-cell">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
                    @if (logs.Items.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="px-4 py-8 text-center text-secondary">No logs found</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var log in logs.Items)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 cursor-pointer transition-colors" onclick="window.location='@basePath/logs/@log.Id'">
                                <td class="px-3 sm:px-4 py-2 sm:py-3">
                                    <span class="badge @GetLevelBadgeClass(log.Level)">@log.Level</span>
                                </td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 max-w-[200px] sm:max-w-md truncate">@log.Message</td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 text-secondary max-w-xs truncate hidden md:table-cell">@log.Source</td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 text-secondary whitespace-nowrap text-xs sm:text-sm">@log.CreatedAt.ToString("MMM dd HH:mm")</td>
                                <td class="px-3 sm:px-4 py-2 sm:py-3 hidden sm:table-cell">
                                    @if (log.IsResolved)
                                    {
                                        <span class="badge badge-success">Resolved</span>
                                    }
                                    else if (log.Level >= LogLevel.Error)
                                    {
                                        <span class="badge badge-error">Open</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (logs.TotalPages > 1)
        {
            <div class="px-3 sm:px-4 py-3 border-t flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                <div class="text-xs sm:text-sm text-secondary">
                    Showing @((logs.Page - 1) * logs.PageSize + 1) to @Math.Min(logs.Page * logs.PageSize, logs.TotalItems) of @logs.TotalItems
                </div>
                <div class="flex gap-2">
                    @if (logs.HasPreviousPage)
                    {
                        <a href="?page=@(logs.Page - 1)&search=@filter.SearchTerm&minLevel=@filter.MinLevel&traceId=@filter.TraceId" class="btn btn-secondary btn-sm">Previous</a>
                    }
                    @if (logs.HasNextPage)
                    {
                        <a href="?page=@(logs.Page + 1)&search=@filter.SearchTerm&minLevel=@filter.MinLevel&traceId=@filter.TraceId" class="btn btn-secondary btn-sm">Next</a>
                    }
                </div>
            </div>
        }
    </div>
</div>

@functions {
    string GetLevelBadgeClass(LogLevel level)
    {
        return level switch
        {
            LogLevel.Trace => "badge-neutral",
            LogLevel.Debug => "badge-info",
            LogLevel.Information => "badge-success",
            LogLevel.Warning => "badge-warning",
            LogLevel.Error => "badge-error",
            LogLevel.Critical => "badge-critical",
            _ => "badge-neutral"
        };
    }
}
